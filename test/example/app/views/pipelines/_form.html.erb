<%= form_with(model: pipeline, class: "contents", data: { controller: "nested-form", nested_form_wrapper_selector_value: ".nested-form-wrapper" }) do |form| %>
  <% if pipeline.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(pipeline.errors.count, "error") %> prohibited this pipeline from being saved:</h2>

      <ul>
        <% pipeline.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <template data-nested-form-target="template">
    <%= form.fields_for :pipeline_assistants, PipelineAssistant.new, child_index: 'NEW_RECORD' do |pipeline_assistant_fields| %>
      <%= render "pipeline_assistant_form", form: pipeline_assistant_fields %>
    <% end %>
  </template>

  <div data-controller="sortable" class="space-y-4 cursor-grab">
    <%= form.fields_for :pipeline_assistants, @pipeline_assistants do |pipeline_assistant_fields| %>
      <%= render "pipeline_assistant_form", form: pipeline_assistant_fields %>
    <% end %>

    <!-- New assistants will be inserted here. -->
    <div data-nested-form-target="target"></div>
  </div>



  <div class="my-5">
    <button type="button" data-action="nested-form#add">Add Assistant</button>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
